---
export interface Props {
  url: string;
  openNew?: boolean;
  classes?: string;
}

import { twMerge } from "tailwind-merge";

const { url, openNew = false, classes = "" } = Astro.props as Props;
const fullUrl = new URL(Astro.request.url);
const active = url === fullUrl.pathname;

const tw = twMerge(
  "styled-link",
  "flex items-center justify-center px-4 cursor-pointer gap-2 h-12 border-box",
  "transition-all duration-300 ease-out will-change-transform",
  "text-light-link dark:text-dark-link",
  "rounded-full border-2 border-transparent",
  "hover:border-light-textMuted/10 dark:hover:border-dark-textMuted/10",
  "bg-transparent",
  "hover:bg-light-textMuted/5 dark:hover:bg-dark-textMuted/5",
  active ? "text-light-linkHover dark:text-dark-linkHover" : "",
  classes
);
---

<a
  href={url}
  {...openNew && { target: "_blank", rel: "noopener noreferrer" }}
  class={tw}>
  <slot />
</a>
